= form_for @brand do |f|
  - if @brand.errors.any?
    #error_explanation
      %h2= "#{pluralize(@brand.errors.count, "error")} prohibited this brand from being saved:"
      %ul
        - @brand.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, "銘柄（ブランド）"
    = f.text_field :name
  .field
    = f.label :name_kana, "銘柄かな"
    = f.text_field :name_kana
  .actions
    = f.submit 'Save'
